{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "jsx": "react-jsx"
    },
    "include": [
        "./**/*.ts",
    ],
    "exclude": ["node_modules"]
}
