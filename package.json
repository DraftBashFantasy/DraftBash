{
    "name": "draftbash",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start:server": "docker-compose down --remove-orphans && docker-compose build && docker-compose up",
        "dev": "concurrently \"docker-compose down --remove-orphans && docker-compose build && docker-compose up\" \"npm run dev -w @draftbash/web-client\"",
        "build:server": "npm run build -w packages/server",
        "dev:client": "npm run dev -w @draftbash/web-client",
        "show:database": "docker exec -it draftbash-postgres-1 psql -U postgres -d draftbash",
        "build:client": "npm run build -w @draftbash/web-client",
        "start": "node dist/server/src/app.js",
        "migrate:database": "npx prisma migrate dev --schema=./packages/infrastructure/src/persistence/schema.prisma --name migration"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "workspaces": [
        "packages/server",
        "packages/web-client",
        "packages/contracts",
        "packages/infrastructure",
        "packages/business"
    ],
    "dependencies": {
        "concurrently": "^8.2.2",
        "dotenv": "^16.4.5",
        "eslint": "^8.57.0",
        "typescript": "^5.4.3"
    }
}